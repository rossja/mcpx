PORT=8080
AUTH_MODE=none
# Options: none, token, oauth2

# URL for the MCP Server (used by test script)
MCP_SERVER_URL=http://localhost:8080

# If AUTH_MODE=token
AUTH_TOKEN=your_secret_token_here

# If AUTH_MODE=oauth2
OAUTH_CLIENT_ID=your_client_id
OAUTH_CLIENT_SECRET=your_client_secret

# For Weather Tool
OPENWEATHER_API_KEY=your_openweather_api_key

# Request logging - logs full request headers, body, and params to a file
REQUEST_LOG_FILE=requests.log
