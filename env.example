# MCPX Server Configuration
# Copy this file to .env and fill in your actual values

# Server Configuration
MCP_SERVER_HOST=0.0.0.0
MCP_SERVER_PORT=8000
MCP_SERVER_NAME=mcpx.lol

# Authentication Configuration
# AUTH_MODE: noauth (no authentication) or oauth (OAuth 2.0)
# WARNING: noauth mode is NOT secure for production use!
AUTH_MODE=oauth
AUTH_DB_PATH=./data/auth.db

# JWT Configuration (required for OAuth mode)
# Generate a secure random key: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=your-super-secret-jwt-key-here
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60
JWT_REFRESH_TOKEN_EXPIRE_DAYS=30
JWT_ALGORITHM=HS256

# OAuth Configuration
OAUTH_CLIENT_ID=mcpx-client
OAUTH_AUTHORIZATION_CODE_EXPIRE_MINUTES=10

# API Keys
# Get your OpenAI API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# Get your Weather API key from: https://openweathermap.org/api
# Leave empty to use fallback weather service
WEATHER_API_KEY=your-weather-api-key-here

# SSL Configuration (for deployment)
CERTBOT_EMAIL=admin@mcpx.lol

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

